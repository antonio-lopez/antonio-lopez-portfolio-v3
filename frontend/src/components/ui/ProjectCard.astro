---
import { Icon } from "astro-icon/components";
import ButtonLink from "./ButtonLink.astro";

interface Props {
  imgSM: string;
  imgLG: string;
  sizes: string;
  height: string;
  width: string;
  alt: string;
  imgStyle: string;
  projectTitle: string;
  excerpt: string;
  liveLink: string;
  githubLink: string;
}

const {
  projectTitle,
  imgSM,
  imgLG,
  height,
  width,
  alt,
  imgStyle,
  sizes,
  liveLink,
  githubLink,
  excerpt,
} = Astro.props;
---

<div class="flex flex-col space-y-6 rounded-xl border border-primary p-4">
  <picture>
    <source
      type="image/webp"
      srcset={`${imgSM} 700w, ${imgLG} 1000w`}
      sizes={sizes}
    />

    <img
      src={imgSM}
      loading="lazy"
      height={height}
      width={width}
      alt={alt}
      class={imgStyle}
    />
  </picture>

  <div class="flex flex-col space-y-1">
    <h3 class="text-xl font-semibold lg:text-2xl">
      {projectTitle}
    </h3>
    <p class="lg:text-lg">
      {excerpt}
    </p>
  </div>

  <div class="flex items-center justify-between">
    <ButtonLink href={liveLink} target="_blank" rel="noopener noreferrer">
      Live
      <Icon name="open" class="ml-2 h-5 w-5" title="link to live project" />
    </ButtonLink>
    <ButtonLink
      href={githubLink}
      target="_blank"
      rel="noopener noreferrer"
      variant="secondary"
    >
      View Project
      <Icon
        name="arrow-right"
        class="ml-2 h-5 w-5"
        title="link to project details"
      />
    </ButtonLink>
  </div>
</div>
