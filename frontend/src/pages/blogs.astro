<Layout title="Blogs">
  <section>
    <div class="dots py-14">
      <div class="layout">
        <PageHeading
          title="Blogs"
          description="Tutorials, snippets of code, various reflections, and insights gained during my developer journey."
        />
      </div>
    </div>

    <div class="layout mt-10 pb-20">
      <div class="grid grid-cols-1 gap-10 md:grid-cols-2 lg:grid-cols-3">
        {
          blogs.map(
            ({
              blogTitle,
              imgSM,
              imgLG,
              height,
              width,
              alt,
              imgStyle,
              sizes,
              date,
              description,
            }) => (
              <BlogCard
                blogTitle={blogTitle}
                imgSM={imgSM}
                imgLG={imgLG}
                height={height}
                width={width}
                alt={alt}
                imgStyle={imgStyle}
                sizes={sizes}
                date={date}
                description={description}
              />
            ),
          )
        }
      </div>
    </div>
  </section>
</Layout>
